{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": "backend/apps",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "calls-service": {
      "type": "application",
      "root": "apps/calls-service",
      "entryFile": "main",
      "sourceRoot": "apps/calls-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/calls-service/tsconfig.app.json"
      }
    },
    "suggested-tasks-service": {
      "type": "application",
      "root": "apps/suggested-tasks-service",
      "entryFile": "main",
      "sourceRoot": "apps/suggested-tasks-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/suggested-tasks-service/tsconfig.app.json"
      }
    },
    "tags-service": {
      "type": "application",
      "root": "apps/tags-service",
      "entryFile": "main",
      "sourceRoot": "apps/tags-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tags-service/tsconfig.app.json"
      }
    },
    "tasks-service": {
      "type": "application",
      "root": "apps/tasks-service",
      "entryFile": "main",
      "sourceRoot": "apps/tasks-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tasks-service/tsconfig.app.json"
      }
    }
  }
}
